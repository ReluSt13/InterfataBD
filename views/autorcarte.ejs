<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../stylesheets/style.css" type="text/css">
    <title>AutorCarte</title>
</head>
<body>
    <div class="container">
        <a href="/views/index.ejs" class="home">HOME</a>
    </div>
    <table>
        <tr>
            <th>idAutor</th>
            <th>idCarte</th>
            <th>pozAutor</th>
        </tr>
        <% for(var i = 0; i < autorcarte_ui.length; i++) { %>
            <tr>
                <form action="views/autorcarte" method="post">
                    <td>
                        <%=autorcarte_ui[i].idAutor %>
                    </td>
                    <td>
                        <%=autorcarte_ui[i].idCarte %>
                    </td>
                    <td>
                        <%=autorcarte_ui[i].pozAutor %>
                    </td>
                </form>
            </tr>
        <% } %>
        <form action="/adaugaAutorCarte" method="post">
            <tr>
                
                    <td>
                        <input type="text" name="idAutor" required>
                    </td>
                    <td>
                        <input type="text" name="idCarte" required>
                    </td>
                    <td>
                        <input type="text" name="pozAutor">
                    </td>
            </tr>
            <tr>
                <td class="submit"></td>
                <td class="submit"></td>
                <td class="submit">
                    <input type="submit" class="button" value="Adauga">
                </td>
            </tr>
        </form>
    </table>
</body>
</html>