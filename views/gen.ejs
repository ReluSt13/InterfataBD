            <tr>
                
                    <td>
                        <input type="text" name="idGen" required>
                    </td>
                    <td>
                        <input type="text" name="numeGen" required>
                    </td>
            </tr>
            <tr>
                <td class="submit"></td>
                <td class="submit"></td>
                <td class="submit">
                    <input type="submit" class="button" value="Adauga">
                </td>
            </tr>
        </form>
    </table>
    </div>
